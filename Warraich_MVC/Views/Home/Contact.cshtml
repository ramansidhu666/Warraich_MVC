                    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
                        <div class="contact-us-right">
                            <h2 class="title-bar-medium-left inner-sub-title">Send Us A Message</h2>
                            <div class="contact-form">
                                <form id="contact-form">
                                    <fieldset>
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <input type="text" name="username" id="first_name" class="form-control" placeholder="Name:" tabindex="1">
                                                    <label id="message1" class="error"></label>
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <input type="email" name="email" id="e-mail_id" class="form-control" placeholder="E-Mail Address:" tabindex="2">
                                                    <label id="message2" class="error"></label>
                                                </div>
                                            </div>
                                            <div class="col-sm-12">
                                                <div class="form-group">
                                                    <input type="text" placeholder="Subject" class="form-control" name="subject" id="subject" tabindex="3">
                                                    <label id="message3" class="error"></label>
                                                </div>
                                            </div>
                                            <div class="col-sm-12">
                                                <div class="form-group">
                                                    <textarea name="message" class="form-control" id="exampleTextarea" placeholder="Message:" rows="3"></textarea>
                                                    <label id="message4" class="error"></label>
                                                </div>
                                            </div>
                                            <div class="col-lg-4 col-md-4 col-sm-6 col-sm-12">
                                                <div class="form-group margin-bottom-none">
                                                    <button id="btnSave" type="button" class="ghost-on-hover-btn">Send</button>
                                                </div>
                                            </div>
                                            <div class="col-lg-8 col-md-8 col-sm-6 col-sm-12">
                                                <div class='form-response'></div>
                                            </div>
                                        </div>
                                    </fieldset>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Contact Us Page Area End Here -->
        <!-- Footer Area Start Here -->
       <script src="http://code.jquery.com/jquery-latest.min.js"
        type="text/javascript"></script>
<script>

    $(document).ready(function () {


        $('#btnSave').click(function () {
            debugger;

            if ($("input[name=username]").val() == "") {
                $('#message1').html('This field is required');
                $('#message2').html('');
                $('#message3').html('');
                $('#message4').html('');
               
            }
            else if ($("input[name=email]").val() == "") {
                $('#message2').html('This field is required');
                $('#message1').html('');
                $('#message3').html('');
                $('#message4').html('');
               
            }
            else if ($("input[name=subject]").val() == "") {
                $('#message3').html('This field is required');
                $('#message1').html('');
                $('#message2').html('');
                $('#message4').html('');
               
            }
            else if ($("textarea[name=message]").val() == "") {
                $('#message4').html('This field is required');
                $('#message1').html('');
                $('#message3').html('');
                $('#message2').html('');
            }

            if ($("input[name=username]").val() != "" && $("input[name=email]").val() != "" && $("input[name=subject]").val() != "" && $("textarea[name=message]").val() != "") {

                $.ajax({

                    url: "/Home/Contact",
                    data: { 'username': $("input[name=username]").val(), 'Subject': $("input[name=subject]").val(), 'Email': $("input[name=email]").val(), 'message': $("textarea[name=message]").val() },
                    type: "POST",
                    dataType: 'json',
                    success: function (data) {
                        debugger;
                        alert('Mail has been sent to admin. You will be contacted shortly.');
                        $('#message1').html('');
                        $('#message3').html('');
                        $('#message2').html('');
                        $('#message4').html('');
                        $("input[name=username]").val('');
                        $("input[name=email]").val('');
                        $("input[name=subject]").val('');
                        $("textarea[name=message]").val('');
                        return false;
                    },
                    error: function () {

                        alert("Dynamic content load failed.");
                    }
                });
            }
        });
    });
</script>